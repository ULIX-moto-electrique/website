---
import Logo from '../assets/theme-images/logo.svg'

const { settings } = Astro.props
---

<footer class="@container bs-container mt-24 mb-8 font-semibold text-bs-foreground-dark [&_a]:hover:text-bs-foreground-light [&_a]:transition-color [&_a]:duration-150" id="contact">

  <!-- Wrapper -->
  <div class="bg-bs-surface-2 p-4 md:p-8 rounded-xl flex justify-between gap-8">

      <!-- Left col -->
      <div class="w-max flex gap-8 md:gap-0 justify-between align- text-bs-foreground-light">

        <!-- Logo -->
        <a class="flex group" href="#top" aria-label="Back to top">
          <Logo class="group-hover:-rotate-180 group-hover:scale-80 transition-transform ease-bs-spring duration-1000" height="72" width="72" />
        </a>
        <a
          href={ settings.join_us_link }
          class="
            ml-4
            inline-flex items-center gap-2
            px-5 py-2.5
            rounded-lg
            bg-bs-accent text-bs-background
            font-semibold text-sm
            shadow-md shadow-bs-accent/20
            transition-all duration-200 ease-out
            hover:bg-bs-accent/90
            hover:shadow-lg hover:shadow-bs-accent/30
            hover:-translate-y-0.5
            focus:outline-none focus-visible:ring-2 focus-visible:ring-bs-accent focus-visible:ring-offset-2 focus-visible:ring-offset-bs-surface-2
          "
        >
          Rejoindre l’équipe
        </a>
      </div>

      <!-- Right col -->
      <div class="flex gap-10 md:gap-2 lg:gap-20 md:justify-end [&_a]:block md:[&_a]:px-5 [&_a]:py-2">

        <!-- Social links -->
        <nav class="flex flex-col">

          { settings.social_links.sort((a,b) => a.title.localeCompare(b.title)).map( item =>

            <a href={ item.link }>
              { item.title }
            </a>

          )}

        </nav>
        
        <nav>
          <a href="https://astro-theme.blackspike.com/" class="self-end">Template</a>
        </nav>

      </div>

  </div>

</footer>
