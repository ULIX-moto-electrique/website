---

const { title, projets } = Astro.props

---

<section id="projets">

  <!-- Content -->
  <div class="bs-container bs-mt-lg flex flex-col gap-6">

    <!-- Title -->
    <h1 class="bs-h1">{ title }</h1> 

    <!-- pricing -->
    <div class="mt-8 grid md:grid-cols-2 gap-8">

      <!-- Item -->
      { projets.map( ( item, index ) =>

      <article
        class:list={['p-12 flex flex-col rounded-xl overflow-hidden', index === 1 ? 'bg-white/90 text-black/90' : 'bg-bs-surface-0/90']}>

        <div class="relative">

          {/* Title */}
          <h2 class="bs-h2">{ item.title }</h2>

          {/* content */}
          <div class="text-xl grow mt-4 " set:html={ item.content } />

        </div>

      </article>

      )}

    </div>

  </div>

</section>
